{
  "name": "Hydration Timer",
  "description": "Sets perpetual timer to remind yourself to hydrate",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["background", "notifications", "scripting"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/16px.png",
      "32": "/images/32px.png",
      "48": "/images/48px.png",
      "128": "/images/128px.png"
    }
  },
  "icons": {
    "16": "/images/16px.png",
    "32": "/images/32px.png",
    "48": "/images/48px.png",
    "128": "/images/128px.png"
  }
}
